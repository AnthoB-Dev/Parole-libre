<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Parole Libre{% endblock %}</title>
        <link rel="shortcut icon" href="{{asset("favicon.ico")}}" type="image/x-icon">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        {% if app.current_route starts with 'app_admin' 
           or app.current_route starts with 'app_login' 
           or app.current_route starts with 'app_register' %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous" defer></script>
        {% endif %}
        <link rel="stylesheet" href="{{asset("assets/css/style.css")}}">
        <script src="{{asset("assets/js/burger.js")}}" defer></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body id="{% if app.request.attributes.get('_route')|starts_with('app_admin') %}body-admin{% else %}body{% endif %}">

        <div class="filter hidden"></div>

        {% if app.request.attributes.get('_route')|starts_with('app_admin') %}

            {% include "commons/_sidebar-admin.html.twig" %}
            <div class="sidebar-placeholder"></div>

        {% elseif app.request.attributes.get('_route') == 'app_login' or app.request.attributes.get('_route') == 'app_register' %}
            {# Si page login ou register, aucun header #}
        {% else %}

            <header id="header-container">

                {% include "commons/_generic-header.html.twig" %}

            </header>

        {% endif %}

        <main class="{% if app.request.attributes.get('_route')|starts_with('app_admin') %}body-container-admin{% else %}body-container{% endif %}"{% if app.request.attributes.get('_route') == 'app_login' or app.request.attributes.get('_route') == 'app_register' %} style="height: 100vh;" {% endif %}>

            {% if app.request.attributes.get('_route')|starts_with('app_admin') or app.request.attributes.get('_route') == 'app_login' or app.request.attributes.get('_route') == 'app_register' %}
                {# Si page login ou register, aucune nav #}
            {% else %}
                {% include "commons/_generic-navlinks.html.twig" %}
            {% endif %}
                {% include "partials/flash.html.twig" %}
            {% block body %}

                <div id="main-container">

                    {% block main %}{% endblock %}

                </div>

            {% endblock %}

        </main>

        {% if app.request.attributes.get('_route')|starts_with('app_admin') %}
            {# Pas de footer en admin #}
        {% else %}
            <footer id="footer-container">
                {% include "commons/_generic-footer.html.twig" %}
            </footer>
        {% endif %}
            
    </body>
</html>
