<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Parole Libre{% endblock %}</title>
        <link rel="shortcut icon" href="{{asset("favicon.ico")}}" type="image/x-icon">
        <link href="../node_modules/@fortawesome/fontawesome-free/css/all.css" rel="stylesheet"> 
        {% if app.request.attributes.get('_route')|starts_with('app_admin') or app.request.attributes.get('_route') == 'app_login' %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
        {% endif %}
        <link rel="stylesheet" href="{{asset("assets/css/style.css")}}">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous" defer></script>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body id="{% if app.request.attributes.get('_route')|starts_with('app_admin') %}body-admin{% endif %}">

        {% block header %}

            {% if app.request.attributes.get('_route')|starts_with('app_admin') %}

                {% include "components/_sidebar-admin.html.twig" %}
                <div class="sidebar-placeholder"></div>

            {% elseif app.request.attributes.get('_route') == 'app_login' %}
                {# Si page login, aucun header #}
            {% else %}

                <header id="header-container">

                    {% include "components/_generic-header.html.twig" %}

                </header>

            {% endif %}

        {% endblock %}

        <main class="{% if app.request.attributes.get('_route')|starts_with('app_admin') %}body-container-admin{% else %}body-container{% endif %}"{% if app.request.attributes.get('_route') == 'app_login' %} style="height: 100vh;" {% endif %}>

            {% include "components/_generic-navlinks.html.twig" %}


            {% block body %}

                <div id="main-container">

                    {% block main %}{% endblock %}

                </div>

            {% endblock %}

        </main>

        {% block footer %}

            <footer id="footer-container">
            
            </footer>
            
        {% endblock %}
    </body>
</html>
