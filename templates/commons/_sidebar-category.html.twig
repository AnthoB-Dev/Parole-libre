{# Sidebar Commentaires #}
<div class="wrapper-sidebar-comments">

	<div class="container-parole-title">
		<h4 class="txt-align-center">Derniers Commentaires {% if lastCategoryComments %}<br>'{{category}}'{% endif %}</h4>
	</div>

	<div class="container-parole-cards">

		{# Articles #}
		{% for comment in lastCategoryComments %}
			{% if comment.acId %}
				<article class="parole-card">
					<a href="{{ path("article.show", {"categorySlug": comment.cSlug, "id": comment.id, "titleSlug": comment.titleSlug}) }}#{{comment.acId}}">
						<div class="container-body-sidebar-cards">
							<div class="body-sidebar-cards-author">
								<div class="body-sidebar-cards-author-spans">
									<span class="greyedOut">Par</span>
									<p>{{comment.uPseudo}}</p>
								</div>
								<div class="body-sidebar-cards-author-spans">
									<span class="greyedOut">le</span>
									<p>{{comment.acCreatedAt|format_datetime(pattern='dd/MM/yy', locale='fr_FR') }}</p>
									<span class="greyedOut">Ã </span>
									<p>{{ comment.acCreatedAt|date('H') }}h{{ comment.acCreatedAt|date('i')}}</p>
								</div>
							</div>
							<div class="body-sidebar-cards-content">
								<div class="body-sidebar-cards-content-title txt-{{comment.cSlug}}">
									<h5>{{comment.title}}</h5>
								</div>
								<div class="body-sidebar-cards-content-content">
									<p>{{comment.acContent}}</p>
								</div>
							</div>
						</div>
					</a>
				</article>
			{% endif %}
		{% endfor %}
	</div>
</div>
