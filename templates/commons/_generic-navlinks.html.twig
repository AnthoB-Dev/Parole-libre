<nav class="container-header-nav">
   <ul class="header-navlinks" id="header-navbar">
      <li><a href="{{path("accueil")}}">Accueil</a></li>
      {% for category in getCategories() %}
         <li class="{{category.categorySlug}}">
            <a href="{{path("category.show", {"categorySlug": category.categorySlug}) }}">{{category.name}}</a>
         </li>
      {% endfor %}
      <div class="dropdown">
         <i class="fa-solid fa-caret-down dropbtn"></i>
         <ul class="dropdown-content">
            {% for category in getCategories() %}
               {% if category.name != "Parole Libre" %}
                  <li class="{{category.categorySlug}}">
                     <a href="{{path("category.paroleLibre.show", {"categorySlug": category.categorySlug})}}">{{category.name}}</a>
                  </li>
               {% endif %}
            {% endfor %}
         </ul>
      </div>
   </ul>
</nav>